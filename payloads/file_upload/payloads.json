  "dangerous_extensions": {
    "php": ["php", "php3", "php4", "php5", "php7", "phtml", "phar"],
    "asp": ["asp", "aspx", "asa", "ashx", "asmx", "cer"],
    "jsp": ["jsp", "jspx", "jsf"],
    "script": ["py", "rb", "pl", "cgi", "sh"],
    "windows": ["exe", "dll", "bat", "cmd", "ps1", "vbs"],
    "config": ["htaccess", "htpasswd", "config", "ini"],
    "web": ["html", "htm", "svg", "xml", "xsl", "shtml"]
  },
  "bypass_techniques": {
    "double_extension": ["test.php.jpg", "test.asp.png", "test.jsp.gif"],
    "null_byte": ["test.php%00.jpg", "test.asp%00.png"],
    "case_variation": ["test.PHP", "test.Php", "test.pHp", "test.PhP"],
    "trailing_chars": ["test.php.", "test.php ", "test.php::$DATA"],
    "special_chars": ["test;.jpg", "test|.jpg", "test`.jpg", "test$.jpg"],
    "path_traversal": ["../../../tmp/test.php", "..\\..\\..\\tmp\\test.php"]
  },
  "content_type_spoofing": {
    "image_claims": ["image/jpeg", "image/png", "image/gif"],
    "safe_claims": ["text/plain", "application/pdf"],
    "dangerous_actual": ["application/x-php", "text/x-php"]
  },
  "common_upload_fields": [
    "file", "upload", "document", "attachment", "image",
    "photo", "avatar", "resume", "files[]", "Filedata"
