    "/media/upload", "/attachment/upload", "/uploads/"
  ],
  "response_indicators": {
    "success": ["upload successful", "file uploaded", "successfully uploaded"],
    "failure": ["invalid file type", "extension not allowed", "upload failed"]
  }
